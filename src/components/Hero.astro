---
import Badge from "./Badge.astro";
const personalImageAlt = "Bautista Mendibe"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div>
  <!-- Imagen pequeña (visible solo en móviles) -->
  <img
      class="rounded-full shadow-lg size-16  block sm:hidden mb-4"
      src="/img-perfil.png"
      alt={personalImageAlt}
  />

  <div class="flex flex-col sm:flex-row">
    <div class="max-w-xl">
      <h1
          class="text-4xl font-bold tracking-tight text-gray-800 mb-2 sm:text-5xl dark:text-white"
      >
        Bautista Mendibe
      </h1>
      <a
          href="https://www.linkedin.com/in/bautista-mendibe-981998134/"
          target="_blank"
          rel="noopener"
          class="transition mt-2 md:hover:scale-105"
      >
        <Badge>Disponible para trabajar</Badge>
      </a>
      <p
          class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
      >
        Ingeniero en Sistemas con +3 años en la industria. Comparto lo que voy aprendiendo del desarrollo y emprendimiento.
      </p>
      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill>
          <MailIcon class="size-4" />
          bautistamendibe10@gmail.com
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/bautista-mendibe-981998134/">
          <LinkedInIcon class="size-4" />
          LinkedIn
        </SocialPill>
      </nav>
    </div>

    <img
        class="rounded-full shadow-lg size-52 ml-4 hidden sm:block justify-center mt-3"
        src="/img-perfil.png"
        alt={personalImageAlt}
    />
  </div>
</div>
