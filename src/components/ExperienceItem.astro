---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div class="relative pl-10 md:pl-16 pb-12 border-l-2 border-gray-300 dark:border-gray-600">
  {/* Timeline dot */}
  <span class="absolute left-[-10px] top-1 w-4 h-4 bg-blue-500 rounded-full border-4 border-white dark:border-gray-800 shadow-md"></span>

  <div class="flex flex-col gap-1">
    <h3 class="text-lg md:text-xl font-bold text-blue-500">{title}</h3>
    <h4 class="text-md font-semibold text-gray-700 dark:text-gray-200">{company}</h4>
    <time class="text-sm text-gray-500 dark:text-gray-400">{date}</time>
  </div>

  <div class="mt-3 text-sm md:text-base leading-relaxed text-gray-600 dark:text-gray-300 whitespace-pre-line">
    {description}
    {
      link && (
        <LinkInline href={link} class="mt-2 inline-flex items-center text-blue-500 hover:underline">
          Saber m√°s
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 ml-1"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M9 6l6 6l-6 6" />
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>
