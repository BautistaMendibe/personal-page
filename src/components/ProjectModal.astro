---
import type { ProjectProps } from "../types.d.ts";

const props = Astro.props as ProjectProps;
const { title, description, link, github, image, tags, onClose } = props;
---

<div class="fixed inset-0 flex items-center justify-center bg-black/50 backdrop-blur-sm z-50">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg max-w-lg w-full relative shadow-lg">
        <!-- Botón de Cerrar -->
        <button class="absolute top-3 right-3 text-gray-600 dark:text-gray-300" onclick={onClose}>
            ✖
        </button>

        <!-- Imagen -->
        <img src={image} alt={title} class="rounded-lg w-full mb-4" />

        <!-- Título -->
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white">{title}</h2>

        <!-- Tags -->
        <div class="flex flex-wrap mt-2">
            {tags.map((tag) => (
                    <span class={`flex items-center gap-x-2 text-sm px-2 py-1 rounded-full ${tag.class} mr-2`}>
                    <tag.icon class="size-4" />
                        {tag.name}
                </span>
            ))}
        </div>

        <!-- Descripción -->
        <p class="mt-2 text-gray-700 dark:text-gray-300">{description}</p>

        <!-- Botones -->
        <div class="mt-4 flex gap-3">
            {github && (
                    <a href={github} target="_blank" class="px-4 py-2 bg-gray-900 text-white rounded-lg">
                        Ver Código
                    </a>
            )}
            {link && (
                    <a href={link} target="_blank" class="px-4 py-2 bg-blue-600 text-white rounded-lg">
                        Ver Proyecto
                    </a>
            )}
        </div>
    </div>
</div>
