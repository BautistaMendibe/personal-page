---
import Layout from "@/layouts/Layout.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import Blog from "../components/icons/Blog.astro";

import BlogCard from "../components/BlogCard.jsx";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout
  title="Bautista Mendibe - Ingeniero y desarrollador con 3 años de experiencia"
  description="Contrata a Bautista Mendibe para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size-8" />
        Experiencia laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Últimos proyectos trabajados
      </TitleSection>
      <Projects />
    </SectionContainer>

    <!--<SectionContainer id="sobre-mi">-->
    <!--  <TitleSection>-->
    <!--    <ProfileCheck class="size-8" />-->
    <!--    Contacto-->
    <!--  </TitleSection>-->
    <!--  <AboutMe />-->
    <!--</SectionContainer>-->

    <SectionContainer id="blog">
      <TitleSection>
        <Blog class="size-8" />
        Blog
      </TitleSection>
      <BlogCard posts={posts} client:load />
    </SectionContainer>

  </div>
  </main>
</Layout>
